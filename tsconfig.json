{
  "include": [
    "./src/**/*",
    "node_modules/@types/node/index.d.ts", "cypress/integration/qards/pages/homepage.spec.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "."
  ]
}
